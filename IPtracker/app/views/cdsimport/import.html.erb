<%= @uploadedPath %>
<% provide(:title, 'Import') %>

<h1>Import</h1>
<h2>Import a Cadence Library</h2> <br>
<h3>PLEASE BE PATIENT! Import will take a few minutes depending on the Library size and your bandwidth.</h3> <br>

<div class="row-fluid">
	
	<div class="span4">
	<%= form_tag({action: :upload}, multipart: true) do %>
		<fieldset>
			<div class="form-group">
				<label>Silicon Revision (ie. 0000XX)</label>
				<%= text_field_tag :silicon, nil, placeholder: '0000XX' %>
			</div>
			  <div class="form-group">
				<label for="filepath">File input</label>
				<%= file_field_tag 'filepath' %>
				<p class="help-block">Input file must be generated from Cadence</p>
			  </div>
			<button type="submit" class="btn btn-default">Submit</button>
		</fieldset>
	<% end %>
	</div>

</div>


<% if(params[:upload_success]) %>
	<pre>
    	<%= render :file => Settings.iptracker.import_log %>
	</pre>
<% end %>

