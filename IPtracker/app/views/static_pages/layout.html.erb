<% provide(:title, 'Layout') %>
  

<%= stylesheet_link_tag "jquery-ui-1.10.3.custom.css" %>

<%= javascript_include_tag "layout" %>

<head>
  <meta charset="utf-8" />



  <style>
  /*#h1 { padding: .2em; margin: 0; }*/
  #products { margin-top: 2em;  }
  #layout-header { margin-top: 2em;  }
  #cart { margin-top: 2em; }
  /* style the list to maximize the droppable hitarea */
  #cart ol { margin: 0; padding: 1em 0 1em 3em; }
  #layout-canvas { width: 100%; height: 400px ;padding: 0.5em;margin-left: 2em; margin-top: 2em; background-color: #FFE; border: double 5px red; }
  </style>

</head>

<div class="row-fluid">
	<div class="span3">
		<div id="products">
		  <h1 class="ui-widget-header">IP Library</h1>
		  <div id="catalog">

			</div>
		</div>
 
		<div id="cart">
		  <h2 class="ui-widget-header"><div id="die-area"></div></h2>
		  <div class="ui-widget-content">
		    <table id="added-item-list">
			<tr class="placeholder"><td><b>Add your items here</b></td></tr>
		    </table>
		  </div>
		</div>
	</div>
	
	<div class="span9"
		<div class="row-fluid">
		<div id="layout-header" class="span7">
			<h1 class="ui-widget-header">Layout Canvas: 2.4mm X 1.2mm</h1>
		</div>
		</div>
		<div class="row-fluid">
			<div class="span7"><div id="layout-canvas"></div>
		</div>
	</div>
</div>
